<Window x:Class="DataBindingBasic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingBasic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="153,182,0,0" TextWrapping="Wrap" Text="{Binding Volume, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Slider Minimum="0" Maximum="100" Value="{Binding Volume}" HorizontalAlignment="Left" Margin="326,182,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="153,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Margin="337,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
